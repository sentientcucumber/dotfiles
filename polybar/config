[bar/top]
# Geometry
width       = 100%
height      = 32
line-size   = 0
border-size = 0 

# Appearance
background = ${colors.background}
foreground = ${colors.foreground}
font-0 = "Montserrat:size=10;"
font-1 = "MaterialIcons:size=12;2"

# Spacing
padding       = 3
module-margin = 3 
fixed-center  = true

# Modules
modules-left   = bspwm
modules-center = date
modules-right  = wifi battery

[colors]
background        = ${xrdb:color0}
background-bright = ${xrdb:color8}
foreground        = ${xrdb:color7}
red               = ${xrdb:color1}

[tokens]
dot = 

[module/bspwm]
type = internal/bspwm

# Focused
label-focused            = ${tokens.dot}
label-focused-foreground = ${colors.foreground}
label-focused-background = ${colors.background}
label-focused-padding    = 2

# Empty
label-empty            = ${tokens.dot}
label-empty-foreground = ${colors.background-bright}
label-empty-background = ${colors.background}
label-empty-padding    = 2

# Occupied
label-occupied = ${tokens.dot}
label-occupied-foreground = ${colors.background-bright}
label-occupied-background = ${colors.background}
label-occupied-padding    = 2

# Urgent
label-urgent            = ${tokens.dot}
label-urgent-foreground = ${colors.red}
label-urgent-background = ${colors.background}
label-urgent-padding    = 2

[module/date]
type     = internal/date

interval = 60
time     = "%l:%M %P"
time-alt = "%l:%M %P"
date-alt = "%m/%d/%y"
label    = " %time% %date%"

[module/battery]
type = internal/battery

battery = BAT0
adapter = AC
full-at = 95

ramp-capacity-0 = ""
ramp-capacity-1 = ""
ramp-capacity-2 = ""
ramp-capacity-3 = ""
ramp-capacity-4 = ""

format-charging = " <label-charging>"
label-charging  = %percentage:3%%

format-discharging = "<ramp-capacity> <label-discharging>"
label-discharging  = %percentage:3%%

format-full = "<ramp-capacity> <label-full>"
label-full  = %percentage:3%%

[module/wifi]
type      = internal/network
interface = wlp3s0
interval  = 5

format-connected = "  <label-connected>"
label-connected  = "%ifname%"

format-disconnected = "  <label-disconnected>"
label-disconnected  = "%ifname%"

[global/wm]
margin-top    = 5
margin-bottom = 5
