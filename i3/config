# configuration
set $mod Mod1 
set $left d
set $right n
set $up h
set $down t
font pango:sans 10

# colors
# FIXME It would be nice to get set_from_resource working so colors
# don't have to be defined in two places. Syntax below:
#   set_from_resource $background color0 "#ffffff"
set $background "#32302f"
set $foreground "#ebdbb2"
set $soft_gray  "#665c54"
set $red        "#fb4934"
set $yellow     "#fabd2f"

default_orientation horizontal
workspace_auto_back_and_forth yes

# rofi
bindsym $mod+u exec --no-startup-id rofi -show run 
bindsym $mod+Shift+u exec --no-startup-id rofi -show window 
bindsym $mod+Return exec i3-sensible-terminal 
bindsym $mod+$up focus up
bindsym $mod+$down focus down
bindsym $mod+$left focus left  
bindsym $mod+$right focus right
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$left move left 
bindsym $mod+Shift+$right move right
bindsym $mod+s split toggle
bindsym $mod+f fullscreen  toggle
bindsym $mod+Shift+q kill
bindsym $mod+comma layout stacking 
bindsym $mod+period layout tabbed 
bindsym $mod+e layout toggle split
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

# workspaces
set $ws1 "1:  "
set $ws2 "2:  "
set $ws3 "3:  "
set $ws4 "4:  "
set $ws5 "5:  "
set $ws6 "6:  "
set $ws7 "7:  "
set $ws8 "8:  "
set $ws9 "9:  "
set $ws10 "10:  "

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# resize mode
mode "resize" {
   bindsym $down resize grow height 10 px
   bindsym $up resize shrink height 10 px 
   bindsym $right resize shrink width 10 px
   bindsym $left resize grow width 10 px 
   bindsym Return mode "default"
   bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

set $locker i3lock-wrapper -u && sleep 1
set $power (l) lock, (e) logout, (s) suspend, (r) reboot, (s) shutdown

mode "$power" {
    bindsym l exec --no-startup-id $locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $locker && systemctl suspend, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym s exec --no-startup-id systemctl poweroff -i, mode "default"  

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Shift+p mode "$power"

# Bar
bar {
  font pango:FontAwesome 11
  status_command i3blocks
  i3bar_command i3bar -t
  position top
  height 30
  strip_workspace_numbers yes
  tray_output none

  colors {
    background $background
    statusline $foreground
    separator  $background

    # class             border      background  text
    focused_workspace   $background $background $foreground
    inactive_workspace  $background $background $soft_gray
    urgent_workspace    $background $background $red
    binding_mode        $background $background $yellow
  }
}

# i3-gaps 
for_window [class="^.*"] border pixel 5
gaps inner 10

# autostart
exec --no-startup-id i3-msg 'workspace $ws1; exec urxvt'
exec --no-startup-id i3-msg 'workspace $ws2; exec emacs'
exec --no-startup-id i3-msg 'workspace $ws3; exec firefox'
exec --no-startup-id i3-msg 'workspace $ws4; exec slack'
exec --no-startup-id compton