[general]
pythonfile = ~/.offlineimap.py
accounts = gmail,school
maxsyncaccounts = 1

[Account gmail]
localrepository = gmail-local
remoterepository = gmail-remote

[Repository gmail-local]
type = Maildir
localfolders = ~/.mail/gmail

[Repository gmail-remote]
type = IMAP
remotehost = imap.gmail.com
remoteusereval = get_username("gmail")
remotepasseval = get_password("gmail")
ssl = yes
sslcacertfile = /etc/ssl/certs/ca-bundle.crt
maxconnections = 1
realdelete = no

[Account school]
localrepository = school-local
remoterepository = school-remote

[Repository school-local]
type = Maildir
localfolders = ~/.mail/school

[Repository school-remote]
type = IMAP
remotehost = m.outlook.com
remoteusereval = get_username("school")
remotepasseval = get_password("school")
ssl = yes
sslcacertfile = /etc/ssl/certs/ca-bundle.crt
maxconnections = 1
realdelete = no
